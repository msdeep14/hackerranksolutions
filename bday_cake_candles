#include <bits/stdc++.h>

using namespace std;

int main(){
    int n,a;
    cin>>n;
    int arr[n],max=0,c=0;
    for(int i=0;i<n;i++){
        cin>>arr[i];
          if(arr[i]>max){
          max = arr[i];
          a=i;
        }
    }
    
    for(int i=a;i<n;i++){
        if(arr[i]==max)
          c++;
    }
    cout<<c;
    return 0;
}
